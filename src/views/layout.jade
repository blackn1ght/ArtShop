doctype html
html(ng-app="artShopApp")
  head
    base(href="/")
    title= title
    link(rel='stylesheet', href='/css/style.css')
    script(src='/bower_components/angular/angular.js', type="text/javascript")
    script(src='/bower_components/angular-resource/angular-resource.min.js', type="text/javascript")
    script(src='/bower_components/angular-route/angular-route.min.js', type="text/javascript")
    script(src="/js/app/account/registerCtrl.js", type="text/javascript")
    script(src='/js/app/app.js', type="text/javascript")
    
  body
    div.header
      div.title
        span 
          a(href="/") ArtShop
      div.menu
        ul
          li 
            a(href="/register") register
          li 
            a(href="/login") login
    div.content
      block content

